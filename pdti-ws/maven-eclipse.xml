<project default="copy-resources">
  <target name="init"/>
  <target name="copy-resources" depends="init">
    <copy todir="target/classes/META-INF/jaxws" filtering="false">
      <fileset dir="src/jaxws" includes="**/*.xjb" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/META-INF/schema" filtering="false">
      <fileset dir="src/schema" includes="**/*.xsd" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/META-INF/wsdl" filtering="false">
      <fileset dir="src/wsdl" includes="**/*.wsdl" excludes="**/*.java"/>
    </copy>
  </target>
</project>