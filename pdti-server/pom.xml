<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>gov.hhs.onc.pdti</groupId>
	<artifactId>pdti-server</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>war</packaging>
	
	<name>pdti-server</name>
	<description>Provider Directories Test Implementation (PDTI) server webapp.</description>
	<url>http://dev.provider-directories.com/pdti-server/</url>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>com.sun.xml.ws</groupId>
			<artifactId>jaxws-rt</artifactId>
			<version>2.2.6</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>apache-log4j-extras</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.ws</groupId>
			<artifactId>spring-ws-core</artifactId>
			<version>2.1.3.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<finalName>pdti-server</finalName>
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<fork>true</fork>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<webResources>
						<webResource>
							<directory>src/schema</directory>
							<includes>
								<include>**/*.xsd</include>
							</includes>
							<targetPath>WEB-INF/schema</targetPath>
						</webResource>
						<webResource>
							<directory>src/wsdl</directory>
							<includes>
								<include>**/*.wsdl</include>
							</includes>
							<targetPath>WEB-INF/wsdl</targetPath>
						</webResource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.0</version>
				<inherited>true</inherited>
				<configuration>
					<charset>${project.build.sourceEncoding}</charset>
					<password>${tomcat.manager.password}</password>
					<path>/${project.build.finalName}</path>
					<update>true</update>
					<url>${tomcat.manager.url}</url>
					<username>${tomcat.manager.username}</username>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jax-ws-commons</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsimport</goal>
						</goals>
						<configuration>
							<wsdlFiles>
								<wsdlFile>HPD_ProviderInformationDirectory.wsdl</wsdlFile>
							</wsdlFiles>
							<wsdlLocation>WEB-INF/wsdl/*</wsdlLocation>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<extension>true</extension>
					<packageName>gov.hhs.onc.pdti.ws.api</packageName>
					<quiet>true</quiet>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<!-- Set Tomcat manager URL property, if not defined in user settings -->
		<profile>
			<id>default-tomcat.manager.url</id>
			<activation>
				<property>
					<name>!tomcat.manager.url</name>
				</property>
			</activation>
			<properties>
				<tomcat.manager.url>http://localhost:8080/manager/text</tomcat.manager.url>
			</properties>
		</profile>
		
		<!-- Set Tomcat manager username property, if not defined in user settings -->
		<profile>
			<id>default-tomcat.manager.username</id>
			<activation>
				<property>
					<name>!tomcat.manager.username</name>
				</property>
			</activation>
			<properties>
				<tomcat.manager.username/>
			</properties>
		</profile>
		
		<!-- Set Tomcat manager password property, if not defined in user settings -->
		<profile>
			<id>default-tomcat.manager.password</id>
			<activation>
				<property>
					<name>!tomcat.manager.password</name>
				</property>
			</activation>
			<properties>
				<tomcat.manager.password/>
			</properties>
		</profile>
	</profiles>
</project>